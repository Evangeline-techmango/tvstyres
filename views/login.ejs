<!DOCTYPE html>
<html>

<head>
    <%- include('partials/header')%>
</head>

<body class="app">
<div id="loader">
    <div class="spinner"></div>
</div>
<script>
    window.addEventListener('load', () => {
        const loader = document.getElementById('loader');
        setTimeout(() => {
            loader.classList.add('fadeOut');
        }, 300);
    });
</script>
    <div class="peers ai-s fxw-nw h-100vh">
        <div class="d-n@sm- peer-greed h-100 pos-r banner-img">
            <div class="overlay"></div>
        </div>
        <div class="pos-a signin-box">
                <img src="/images/tvs-logo.png" alt="" class="logo" />
                <form class="login-form">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label label-blue">Username</label>
                        <div class="col-sm-9">
                            <input type="email" class="form-control" placeholder="John Doe">
                        </div>
                    </div>
                    <div class="form-group row pos-r">
                        <label class="col-sm-3 col-form-label label-blue">Password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control password" placeholder="Password">
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon pos-a toggle-password"></span>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="peers ai-c jc-sb fxw-nw">
                            <div class="col text-center login-btn">
                                <button class="btn btn-primary text-uppercase">Login</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
    </div>

<%- include('partials/script') %>
<script>
    $( ".toggle-password" )
        .mouseup(function() {
            $(".password").attr('type','password');
        })
        .mousedown(function() {
            $(".password").attr('type','text');
        });
</script>
</body>

</html>