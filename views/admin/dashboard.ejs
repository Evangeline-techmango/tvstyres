                  </div>
                  <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
              </div>
              <!-- nav-tabs-custom -->
            </div>
          </div>
          <!-- /.col -->
        </div>
      </div>
    </main>
      <%- include('partials/footer')%>
  </div>
</div>
<%- include('partials/script') %>
</body>

</html>